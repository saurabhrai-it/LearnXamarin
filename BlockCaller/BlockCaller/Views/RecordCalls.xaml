<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlockCaller.Views.RecordCalls">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Record All Calls" Clicked="RecordAll"
           VerticalOptions="Start" 
           HorizontalOptions="Fill" />

            <Button Text="Record Incoming Calls" Clicked="RecordIncomingCall"
           HorizontalOptions="Fill" />

            <Button Text="Record Outgoing Calls"  Clicked="RecordOutgoingCall"
           HorizontalOptions="Fill" />


            <Button Text="Auto Answer Calls" Clicked="AutoAnswer"
              HorizontalOptions="Fill" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>